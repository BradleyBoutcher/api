#!/bin/bash -e 

OUTPUT=${1}

if [[ -z $OUTPUT ]]; then 
    echo "Error: Please specify an output file."
    echo 
    echo "Example: ./bin/bundle swagger.yaml"
else 
    docker run --rm \
        -v $(pwd):/spec \
        redocly/openapi-cli \
            bundle "openapi-2.json" \
            -o "out/$OUTPUT"
fi
