#!/bin/bash -e

# Run from top-level dir
cd "$(dirname "$0")"

if [ ! -z "$(pwd)/destiny.yml" ]; then 
    echo "Please run `bin/bundle` before attempting to use this utility."
    exit 1
fi

# Target output language
LANGUAGE="${1}"

# No language specified - cancel run
if [[ -z $LANGUAGE ]]; then 
    echo "Error: no language given as argument."
    echo "A full list of options can be found here: https://openapi-generator.tech/docs/generators/"
    echo
    echo 'Example: `./bin/generate go`'
    exit 1
else 
    docker run --rm \
    -v $(pwd):/work \
    openapitools/openapi-generator-cli generate \
        --skip-validate-spec \
        -i /work/destiny.yml \
        -g "$LANGUAGE" \
        -o "/work/out/$LANGUAGE"
fi
